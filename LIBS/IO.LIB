V_MSGBOX:
	PUSH ebp
	MOV ebp, esp
	
	ADD DWORD [ebp + 12], 4
	ADD DWORD [ebp + 16], 4
	invoke MessageBox, 0, DWORD [ebp + 16], DWORD [ebp + 12], DWORD [ebp + 8]
	PUSH eax
	SUB DWORD [ebp + 16], 4
	SUB DWORD [ebp + 12], 4
	invoke HeapFree,[hHeap],0,DWORD [ebp + 16]
	invoke HeapFree,[hHeap],0,DWORD [ebp + 12]
	POP eax
	
	MOV esp, ebp
	POP ebp
	RET
